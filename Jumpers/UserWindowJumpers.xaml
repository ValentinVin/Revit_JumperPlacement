<Window x:Class="Jumpers.UserWindowJumpers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Jumpers"
             mc:Ignorable="d" 
             ResizeMode="CanMinimize"
             Width="750" Height="550">
    <Grid Margin="0,0,0,0">

        <Button Name = "ButtonPlace"
                Content="Разместить перемычки" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Height="32" Width="264" 
                FontSize="15"
                Click="placeJumpers" 
                Margin="0,460,0,0" 
                RenderTransformOrigin="0.506,-0.278"/>
        <RadioButton Content="Видимые на виде" 
                     HorizontalAlignment="Left" 
                     Margin="30,55,0,0" 
                     VerticalAlignment="Top"
                     IsChecked="True"
                     Click="filterView"/>
        <RadioButton Content="Во всем проекте" 
                     HorizontalAlignment="Left" 
                     Margin="30,75,0,0" 
                     VerticalAlignment="Top"
                     Click="filterAll"/>
        <RadioButton Content="Выбрать" 
                     HorizontalAlignment="Left" 
                     Margin="30,95,0,0" 
                     VerticalAlignment="Top"
                     Name="Rbtn3"
                     Click="filterUserSelect"/>
        <Label Content="Обработать проемы:" HorizontalAlignment="Left" Margin="30,24,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" 
                  Margin="27,164,0,0" 
                  VerticalAlignment="Top" 
                  Width="165"
                  Name="Combobox_JumperFamily"/>
        <ComboBox HorizontalAlignment="Left" 
                  Margin="249,164,0,0" 
                  VerticalAlignment="Top" 
                  Width="187"
                  Name="Combobox_JumperTypes"/>
        <TextBlock Text="Выберите семейство проема:" HorizontalAlignment="Left" Margin="485,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="Выберите тип стены" HorizontalAlignment="Left" Margin="27,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" 
                  Margin="30,345,0,0" 
                  VerticalAlignment="Top" 
                  Width="187"
                  Name="Combobox_WallTypes"
                  SelectionChanged="selectWallTypes"
                  Cursor="ArrowCD"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="278,348,0,0" 
                   TextWrapping="Wrap" 
                   Text="" 
                   Name="Thickness"
                   VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="278,321,0,0" 
                   TextWrapping="Wrap" 
                   Text="Толщина стены" 
                   VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" 
                 Margin="30,246,0,0" 
                 TextWrapping="Wrap" 
                 Text="Высота" 
                 VerticalAlignment="Top" 
                 Width="162"
                 Name="openingHeight"/>
        <TextBox HorizontalAlignment="Left" 
                 Margin="249,246,0,0" 
                 TextWrapping="Wrap" 
                 Text="Ширина" 
                 VerticalAlignment="Top" 
                 Width="187"
                 Name="openingWidth"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="30,217,0,0" 
                   TextWrapping="Wrap" 
                   Text="Параметр высоты проема" 
                   VerticalAlignment="Top" 
                   RenderTransformOrigin="-0.385,1.068"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="249,217,0,0" 
                   TextWrapping="Wrap" 
                   Text="Параметр ширины проема" 
                   VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="249,138,0,0" 
                   TextWrapping="Wrap" 
                   Text="Выберите тип перемычки" 
                   VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" 
                   Margin="30,138,0,0" 
                   TextWrapping="Wrap" 
                   Text="Выберите семейство перемычки" 
                   VerticalAlignment="Top"/>
        <StackPanel Margin="407,345,10,45"
                    Name="openingsBox"/>
    </Grid>
</Window>
